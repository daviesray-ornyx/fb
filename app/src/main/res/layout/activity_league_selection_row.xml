<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_league_selection_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/sports_greyLight"
    android:clickable="true"
    android:clipToPadding="true"
    android:elevation="2dp"
    app:cardBackgroundColor="@color/sports_greyLight">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/sports_greyLight"
        android:paddingBottom="3dp"
        android:paddingTop="3dp">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/leagueImage"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="7dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/flag_philippines"
            app:civ_border_color="#EEEEEE"
            app:civ_border_width="4dp"
            app:civ_shadow="true"
            app:civ_shadow_radius="0"
            app:civ_shadow_color="@color/sports_red"/>

        <TextView
            android:id="@+id/leagueName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="21dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="16dp"
            android:text="BUNDESLIGA"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toRightOf="@+id/leagueImage"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/leagueCountry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="21dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="-9dp"
            android:text="German League"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toRightOf="@+id/leagueImage"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/leagueName" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
